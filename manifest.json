{
   "name":"Production Warning",
   "description":"Show a warning once you're on a production site.",
   "version":"1",
   "manifest_version":2,
   "permissions":[
      "storage"
   ],
   "browser_action": {
      "default_icon": {                    // optional
      "19": "images/icon19.png",           // optional
      "38": "images/icon38.png"            // optional
      },
   },
   "background":{
      "scripts":[
         "background.js"
      ]
   },
   "content_scripts":[
      {
         "matches":[
            "<all_urls>"
         ],
         "js":[
            "content_script.js"
         ],
         "css":[
            "content_styles.css"
         ]
      }
   ]
}